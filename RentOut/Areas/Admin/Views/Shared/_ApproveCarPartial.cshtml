@model CarServiceModel
@inject IRentierService rentierService
@inject ICarService carService

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Car Image">
        <div class="card-body text-center">
            <h4>@Model.Title</h4>
            <h6>Town: <b>@Model.Town</b></h6>
            <h6>
                Price Per Day:
                <b>@String.Format("{0:f2}", Model.PricePerDay) BGN</b>
            </h6>
            <br />
            <form class="input-group-sm" asp-controller="Cars"
                  asp-area="Admin" asp-action="Approve" asp-route-carId="@Model.Id" method="post">
                <input class="btn btn-success" type="submit" value="Approve" />
            </form>
        </div>
    </div>
</div>