@model IEnumerable<CarServiceModel>
@{
    ViewBag.Title = "Approved";
}

<div class="mt-4 p-5 bg-light text-center">
    <a asp-area="" asp-controller="Car" asp-action="All" class="btn btn-primary btn-lg">All Cars</a>
    <span> | </span>
    <a asp-area="" asp-controller="Car" asp-action="Add" class="btn btn-primary btn-lg">Add Car</a>
    <span> | </span>
    <a asp-area="Admin" asp-controller="Cars" asp-action="Mine" class="btn btn-primary btn-lg">My Cars</a>
    <span> | </span>
    <a asp-area="Admin" asp-controller="Rent" asp-action="All" class="btn btn-primary btn-lg">All Rents</a>
    <span> | </span>
    <a asp-area="Admin" asp-controller="User" asp-action="All" class="btn btn-primary btn-lg">All Users</a>
</div>

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<h4>Cars to approve</h4>
@if (!Model.Any())
{
    <h2 class="text-center">You have no cars to approve!</h2>
}
<div class="row">
    @foreach (var car in Model)
    {
        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_ApproveCarPartial.cshtml", car)
    }
</div>